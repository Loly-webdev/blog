{% extends "layout.html.twig" %}
{% block content %}
    <h3 class="mb-5 text-uppercase">
        <span class="fas fa-file-signature"></span>
        Inscription :
    </h3>
    <div class="container mb-5">
        {% if status == true %}
            <div class="alert alert-{{ status }}">{{ statusMessage }}</div>
        {% endif %}
        <form action="/register/add" method="POST" class="p-4 starter-template rounded shadow">
            <div class="col">
                <div class="form-group">
                    <label for="login" class="mt-3 mb-2 text-secondary font-weight-bold">Identifiant :</label>
                    <input class="form-control" id="login" name="user[login]" type="text"
                           placeholder="Identifiant" required/>
                </div>
                <div class="form-group">
                    <label for="email" class="mt-3 mb-2 text-secondary font-weight-bold">Email</label>
                    <input class="form-control" id="email" name="user[mail]" type="text"
                           placeholder="Email" required/>
                </div>
                <div class="form-group">
                    <label for="pass1" class="mt-3 mb-2 text-secondary font-weight-bold">Mot de passe :</label>
                    <input class="form-control" id="pass1" name="user[password]" type="password"
                           minlength="3" placeholder="Mot de passe" required/>
                </div>
                <div class="form-group">
                    <label for="pass2" class="mt-3 mb-2 text-secondary font-weight-bold">Répéter le mot de passe :</label>
                    <input class="form-control" id="pass2" name="user[password2]" type="password"
                           minlength="3" placeholder="Répéter le mot de passe" required/>
                </div>
                <button type="submit" class="p-2 mt-4 btn btn-success">
                    Envoyer
                    <span class="fas fa-share"></span>
                </button>
            </div>
        </form>
    </div>
    <div class="p-3 mt-4 mb-5 mx-auto w-50 border-top border-bottom border-info">
        <h4>Déjà inscrit ?</h4>
        <a href="/authentication" class="btn btn-primary p-2 my-2">
            <span class="fas fa-sign-in-alt"></span>
            Connection
        </a>
    </div>
{% endblock %}

