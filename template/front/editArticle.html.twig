{% extends "layout.html.twig" %}
{% block nav %}
    {{ include('partial/_navAdmin.html.twig') }}
{% endblock %}
{% block content %}
    <section class="form">
        <h4>Modification de l'article : {{ article.title }}</h4>
        <form action="" method="POST">
            <div>
                <label for="title">Titre</label><br/>
                <input type="text" id="title" name="article[title]" value="{{ article.title }}"/>
            </div>
            <div>
                <label for="author">Auteur</label><br/>
                <input type="text" id="author" name="article[author]" value="{{ article.author }}"/>
            </div>
            <div>
                <label for="content">Article</label><br/>
                <textarea id="content" name="article[content]">{{ article.content }}</textarea>
            </div>
            <div>
                <input type="submit"/>
            </div>
        </form>
    </section>
    <br>
    {{ message }}
    <br>
    <section class="link">
        <a href="/article">Retour Ã  la liste des billets</a>
    </section>
{% endblock %}
