{% extends "layout.html.twig" %}
{% block nav %}
    {{ include('partial/_navAdmin.html.twig') }}
{% endblock %}
{% block content %}
    <section class="form">
        <h4>Modification du commentaire n°{{ comment.id }}</h4>
        <form action="" method="POST">
            <div>
                <label for="author">Auteur</label><br/>
                <input type="text" id="author" name="comment[author]" value="{{ comment.author }}"/>
            </div>
            <div>
                <label for="content">Article</label><br/>
                <textarea id="content" name="comment[content]">{{ comment.content }}</textarea>
            </div>
            <div>
                <input type="submit"/>
            </div>
        </form>
    </section>
    <br>
    {{ message }}
    <br>
    <section class="link">
        <a href="/article">Retour à la liste des billets</a>
    </section>
{% endblock %}
