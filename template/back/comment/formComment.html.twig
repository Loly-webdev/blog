{% extends "back/layoutBack.html.twig" %}
{% block content %}
    <h3>
        <span class="fas fa-feather-alt"></span>
        Ecrire un nouveau commentaire :
    </h3>
    <div class="container">
        <div class="alert alert-{{ status }}">{{ statusMessage }}</div>
        <form action="" method="POST" class="p-3 starter-template rounded">
            <div class="col">
                <div class="form-group">
                    <label for="author" class="text-secondary font-weight-bold">Auteur :</label>
                    <input class="form-control" type="text" id="author" name="comment[author]"
                           placeholder="Auteur" value="{{ user.login }}" required/>
                </div>
                <div class="form-group">
                    <label for="comment" class="text-secondary font-weight-bold">Commentaire :</label>
                    <textarea class="form-control" id="comment" name="comment[content]" rows="5"
                              placeholder="Commentaire" required></textarea>
                </div>
                <button type="submit" class="btn btn-primary">
                    Envoyer
                    <span class="fas fa-share"></span>
                </button>
            </div>
        </form>
    </div>
    <div class="p-2 my-4 mx-auto w-50 border-right-0 border-left-0 border border-secondary">
        <a href="/article">
            <span class="fas fa-angle-double-left"></span>
            Retour Ã  la liste des billets
        </a>
    </div>
{% endblock %}
