{% extends "back/layoutBack.html.twig" %}
{% block content %}
    <h3 class="mb-5">
        <span class="far fa-newspaper"></span>
        Modification du commentaire n°{{ comment.id }}
    </h3>
    <div class="container mb-5">
        {% if status == true %}
            <div class="alert alert-{{ status }}">{{ statusMessage }}</div>
        {% endif %}
        <form action="" method="POST" class="p-3 starter-template rounded shadow">
            <div class="col">
                <div class="form-group">
                    <label for="author" class="text-secondary font-weight-bold">Auteur :</label><br/>
                    <input class="form-control" type="text" id="author" name="comment[author]"
                           value="{{ comment.author }}" required/>
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    <label for="content" class="text-secondary font-weight-bold">Article :</label><br/>
                    <textarea class="form-control" id="content" name="comment[content]"
                              required>{{ comment.content }}</textarea>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">
                Envoyer
                <span class="fas fa-share"></span>
            </button>
        </form>
    </div>
    <div class="p-3 mt-4 mb-5 mx-auto w-50 border-top border-bottom border-info">
        <a href="../../../../index.php" class="btn btn-primary p-2 my-2">
            <span class="fas fa-angle-double-left"></span>
            Retour à la liste des billets
        </a>
    </div>
{% endblock %}
