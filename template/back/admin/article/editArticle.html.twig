{% extends "back/admin/layoutAdmin.html.twig" %}
{% block content %}
    <h3 class="mb-5 text-uppercase">
        <span class="far fa-newspaper"></span>
        Modification de l'article : {{ article.title }}
    </h3>
    {% if status is not empty %}
        <div class="alert alert-{{ status }}">{{ statusMessage }}</div>
    {% endif %}
    <form action="" method="POST" class="p-4 starter-template rounded shadow">
        <div class="col">
            <div class="row">
                <div class="form-group col-md-6">
                    <label for="title" class="mt-3 mb-2 text-secondary font-weight-bold">Titre :</label>
                    <input class="form-control" type="text" id="title" name="article[title]"
                           value="{{ article.title }}" required/>
                </div>
                <div class="form-group col-md-6">
                    <label for="author" class="mt-3 mb-2 text-secondary font-weight-bold">Auteur :</label><br/>
                    <input class="form-control" type="text" id="author" name="article[author]"
                           value="{{ article.author }}" required/>
                </div>
            </div>
            <div class="form-group">
                <label for="hat" class="mt-3 mb-2 text-secondary font-weight-bold">Chapô :</label><br/>
                <textarea class="form-control" id="hat" name="article[hat]" rows="3"
                          required>{{ article.hat }}</textarea>
            </div>
            <div class="form-group">
                <label for="content" class="mt-3 mb-2 text-secondary font-weight-bold">Article :</label><br/>
                <textarea class="form-control" id="content" name="article[content]" rows="7"
                          required>{{ article.content }}</textarea>
            </div>
            <button type="submit" class="mt-3 mb-2 btn btn-success">
                Envoyer
                <span class="fas fa-share"></span>
            </button>
        </div>
    </form>
    <div class="p-3 mt-4 mx-auto w-50 border-top border-bottom border-info">
        <a href="/Admin/articleAdmin?_page=1" class="p-2 btn btn-primary">
            <span class="fas fa-angle-double-left"></span>
            Retour à la liste des articles
        </a>
    </div>
{% endblock %}
