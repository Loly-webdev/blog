{% extends "back/admin/layoutAdmin.html.twig" %}
{% block content %}
    <h3 class="mb-5 text-uppercase">
        <span class="fas fa-user-edit"></span>
        Modification du compte utilisateur de <strong class="text-info">{{ user.login }}</strong>:
    </h3>
    <div class="container mb-5">
        {% if status == true %}
            <div class="alert alert-{{ status }}">{{ statusMessage }}</div>
        {% endif %}
        <form action="" method="POST" class="p-4 starter-template rounded shadow">
            <div class="col">
                <div class="form-group">
                    <label for="login" class="mt-3 mb-2 text-secondary font-weight-bold">Identifiant :</label>
                    <input class="form-control" type="text" id="login" name="user[login]"
                           value="{{ user.login }}" required/>
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    <label for="password" class="mt-3 mb-2 text-secondary font-weight-bold">Mot de passe
                        :</label><br/>
                    <input class="form-control" type="text" id="password" name="user[password]"
                           value="{{ user.password }}"
                           required/>
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    <label for="role" class="mt-3 mb-2 text-secondary font-weight-bold">Role :</label><br/>
                    <input class="form-control" type="text" id="role" name="user[role]" value="{{ user.role }}"
                           required/>
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    <label for="mail" class="mt-3 mb-2 text-secondary font-weight-bold">Mail :</label><br/>
                    <input class="form-control" type="text" id="mail" name="user[mail]" value="{{ user.mail }}"
                           required/>
                </div>
            </div>
            <div class="row text-left mt-4 mb-2 mx-auto">
                <label for="role" class="h5 my-3 text-secondary font-weight-bold text-decoration-underline">Role
                    :</label>
                <div class="form-check">
                    <input type="checkbox" id="user" name="user[role]" class="form-check-input" value="user">
                    <label class="form-check-label text-info font-weight-bold h5" for="user">User</label>
                </div>
                <div class="form-check">
                    <input type="checkbox" id="admin" name="user[role]" class="form-check-input" value="admin">
                    <label class="form-check-label text-primary font-weight-bold h5" for="admin">Admin</label>
                </div>
            </div>
            <button type="submit" class="mt-3 mb-2 btn btn-success">
                Envoyer
                <span class="fas fa-share"></span>
            </button>
        </form>
    </div>
    <div class="p-3 mt-4 mx-auto w-50 border-top border-bottom border-info">
        <a href="/Admin/userAdmin/userList?page=1" class="btn btn-primary p-2 my-2">
            <span class="fas fa-angle-double-left"></span>
            Retour Ã  la liste des utilisateurs
        </a>
    </div>
{% endblock %}
