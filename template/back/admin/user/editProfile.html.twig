{% extends "back/admin/layoutAdmin.html.twig" %}
{% block content %}
<div class="px-5 pt-3 mb-3 col-9 mx-auto text-center">
    <h3 class="mb-5 text-uppercase">
        <span class="fas fa-user-edit"></span>
        Modification du compte utilisateur de <strong class="text-info">{{ user.login }}</strong>:
    </h3>
    <div class="container mb-5">
        {% if status == true  %}
            <div class="alert alert-{{ status }}">{{ statusMessage }}</div>
        {% endif %}
        <form action="" method="POST" class="p-4 starter-template rounded shadow">
            <div class="col">
                <div class="form-group">
                    <label for="login" class="mt-3 mb-2 text-secondary font-weight-bold">Identifiant :</label>
                    <input class="form-control" type="text" id="login" name="user[login]"
                           value="{{ user.login }}" required/>
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    <label for="password" class="mt-3 mb-2 text-secondary font-weight-bold">Mot de passe :</label><br/>
                    <input class="form-control" type="text" id="password" name="user[password]" value="{{ user.password }}"
                           required/>
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    <label for="role" class="mt-3 mb-2 text-secondary font-weight-bold">Role :</label><br/>
                    <input class="form-control" type="text" id="role" name="user[role]" value="{{ user.role }}"
                           required/>
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    <label for="mail" class="mt-3 mb-2 text-secondary font-weight-bold">Mail :</label><br/>
                    <input class="form-control" type="text" id="mail" name="user[mail]" value="{{ user.mail }}"
                           required/>
                </div>
            </div>
            <button type="submit" class="mt-3 mb-2 btn btn-success">
                Envoyer
                <span class="fas fa-share"></span>
            </button>
        </form>
    </div>
    <div class="p-3 mt-4 mb-5 mx-auto w-50 border-top border-bottom border-info">
        <a href="/Admin/userAdmin/profile" class="btn btn-primary p-2 my-2">
            <span class="fas fa-angle-double-left"></span>
            Retour au profil
        </a>
    </div>
{% endblock %}
