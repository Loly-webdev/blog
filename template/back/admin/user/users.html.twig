{% extends "back/admin/layoutAdmin.html.twig" %}
{% block content %}
    <div class="px-5 pt-3 mb-3 col-9 mx-auto text-center">
        <h3 class="mb-5 text-uppercase">
            <span class="far fa-newspaper"></span>
            liste des Utilisateurs :
        </h3>
        <div class=" p-3 table-responsive rounded bg-blue shadow">
            <table class="h5 table mb-0">
                <thead class="text-secondary">
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Identifiant</th>
                    <th scope="col">Role</th>
                    <th scope="col">Mail</th>
                    <th scope="col">Dates</th>
                    <th scope="col">Modération</th>
                </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr>
                        <th scope="row">{{ user.id }}</th>
                        <td class="bg-light text-info font-weight-bold">{{ user.login }}</td>
                        <td class="bg-light text-secondary font-weight-bold">{{ user.role }}</td>
                        <td class="bg-light text-secondary">{{ user.mail }}</td>
                        <td class="h6 bg-light text-dark font-italic">
                            <strong>Créé le :</strong>{{ user.createdAt|date("m/d/Y à H:m:s") }}
                            <br>
                            <strong>Mis à jour le :</strong>{{ user.updatedAt|date("m/d/Y à H:m:s") }}
                        </td>
                        <td>
                            <div class="row d-flex p-2 my-2 mx-auto">
                                <a href="/Admin/userAdmin/edit?userId={{ user.id }}"
                                   class="p-2 btn btn-info">
                                    <span class="fas fa-edit"></span>
                                    Éditer
                                </a>
                                <a href="/Admin/userAdmin/delete?userId={{ user.id }}"
                                   class="p-2 btn btn-danger">
                                    <span class="fas fa-trash-alt"></span>
                                    Supprimer
                                </a>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="p-3 mt-4 mb-5 mx-auto w-50 border-top border-bottom border-info">
            <a href="/Admin/articleAdmin/add" class="p-2 btn btn-primary">
                <span class="fas fa-user-plus"></span>
                Ajouter un utilisateur
            </a>
        </div>
    </div>
{% endblock %}
