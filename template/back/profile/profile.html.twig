{% extends "back/layoutBack.html.twig" %}
{% block content %}
    <h3 class="mb-5">
        <span class="far fa-address-card"></span>
        Mon profil :
    </h3>
    <div class="container mb-5">
        <div class="mb-5 p-3 rounded bg-blue shadow">
            <p class="h3 p-2 my-2 mx-auto text-info font-weight-bold">
                Salutation {{ user.login }} !
            </p>
            <div class="h5 p-2 mt-3 text-secondary bg-light text-dark rounded">
                <div class="form-group">
                    <span class="font-weight-bold">Date de création du compte : </span>{{ user.createdAt }}
                </div>
                <div class="form-group">
                    <span class="font-weight-bold">Dernière mise à jour : </span>{{ user.updatedAt }}
                </div>
                <div class="form-group">
                    <span class="font-weight-bold">mon adresse mail : </span>{{ user.mail }}
                </div>
            </div>
        </div>
    </div>
    <div class="p-3 mt-4 mb-5 mx-auto w-50 border-top border-bottom border-info">
        <a href="/home" class="m-2 p-2 btn btn-primary">
            <span class="fas fa-angle-double-left"></span>
            Retour à l'accueil
        </a>
    </div>
{% endblock %}
