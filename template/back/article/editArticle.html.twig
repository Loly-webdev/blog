{% extends "back/layoutBack.html.twig" %}
{% block content %}
    <h3>
        <span class="far fa-newspaper"></span>
        Modification de l'article : {{ article.title }}
    </h3>
    <div class="container">
        <div class="alert alert-{{ status }}">{{ statusMessage }}</div>
        <form action="" method="POST" class="p-3 starter-template rounded">
            <div class="col">
                <div class="form-group">
                    <label for="title" class="text-secondary font-weight-bold">Titre :</label>
                    <input class="form-control" type="text" id="title" name="article[title]"
                           value="{{ article.title }}" required/>
                </div>
                <div class="form-group">
                    <label for="author" class="text-secondary font-weight-bold">Auteur :</label><br/>
                    <input class="form-control" type="text" id="author" name="article[author]"
                           value="{{ article.author }}" required/>
                </div>
                <div class="form-group">
                    <label for="hat" class="text-secondary font-weight-bold">Chapô :</label><br/>
                    <textarea class="form-control" id="hat" name="article[hat]" rows="5"
                              required>{{ article.hat }}</textarea>
                </div>
                <div class="form-group">
                    <label for="content" class="text-secondary font-weight-bold">Article :</label><br/>
                    <textarea class="form-control" id="content" name="article[content]" rows="9"
                              required>{{ article.content }}</textarea>
                </div>
                <button type="submit" class="btn btn-primary">
                    Envoyer
                    <span class="fas fa-share"></span>
                </button>
            </div>
        </form>
    </div>
    <div class="p-2 my-4 mx-auto w-50 border-right-0 border-left-0 border border-secondary">
        <span class="fas fa-angle-double-left"></span>
        <a href="/article">Retour à la liste des billets</a>
    </div>
{% endblock %}
