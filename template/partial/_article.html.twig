<h2 class="mb-5 text-uppercase">
    <span class="far fa-newspaper"></span>
    Derniers billets du blog :
</h2>
<div class="row row-cols-1 row-cols-md-3">
    {% for article in articles %}
        <div class="col mb-4">
            <div class="card h-100">
                <div class="card-header">
                    <h4 class="card-title text-uppercase">{{ article.title }}</h4>
                </div>
                <div class="card-body bg-blue">
                    <h5 class="card-subtitle mb-2 text-muted">{{ article.hat }}</h5>
                </div>
                <div class="card-footer text-muted">
                    <a href="/{{ page }}/see?articleId={{ article.id }}" class="p-2 my-2 btn btn-primary">
                        Voir l'article
                        <span class="fas fa-angle-double-right"></span>
                    </a>
                    <br>
                    <span class="font-weight-bold">Derni√®re modification le :</span>
                    {{ article.updatedAt|date("d/m/Y") }}
                </div>
            </div>
        </div>
    {% endfor %}
</div>
