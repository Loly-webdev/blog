<h3 class="mb-5 text-uppercase">
    <span class="fas fa-envelope-open-text"></span>
    Contactez-moi :
</h3>
<div class="container mb-5">
    {% if status.status == true %}
        <div class="alert alert-{{ status . status }}">{{ status . statusMessage }}</div>
    {% endif %}
    <form action="" method="POST" class="p-4 starter-template rounded shadow">
        <div class="col">
            <div class="row">
                <div class="form-group col-md-6">
                    <label for="name" class="mt-3 mb-2 text-secondary font-weight-bold">Nom :</label>
                    <input class="form-control" id="name" name="contact[nameUser]" placeholder="Nom" type="text"
                           value="{{ user . login }}"
                           required/>
                </div>
                <div class="form-group col-md-6">
                    <label for="email" class="mt-3 mb-2 text-secondary font-weight-bold">E-mail :</label>
                    <input class="form-control" id="email" name="contact[email]" placeholder="Email" type="email"
                           value="{{ user . mail }}"
                           required/>
                </div>
            </div>
            <div class="form-group">
                <label for="subject" class="mt-3 mb-2 text-secondary font-weight-bold">Sujet :</label>
                <input class="form-control" id="subject" name="contact[subject]" placeholder="Sujet" type="text"
                       required/>
            </div>
            <div class="form-group">
                <label for="message" class="mt-3 mb-2 text-secondary font-weight-bold">Message :</label>
                <textarea class="form-control" id="message" name="contact[message]" placeholder="Message"
                          rows="7" required></textarea>
            </div>
            <input type="hidden" name="contact[token]" value="{{ tokenValue }}"/>
            <button type="submit" class="p-2 mt-4 btn btn-success">
                Envoyer
                <span class="fas fa-share"></span>
            </button>
        </div>
    </form>
</div>
