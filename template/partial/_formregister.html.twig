<div class="form-group">
    <label for="login" class="mt-3 mb-2 text-secondary font-weight-bold">Identifiant :</label>
    <input class="form-control" id="login" name="user[login]" type="text"
           placeholder="Identifiant" required/>
</div>
<div class="form-group">
    <label for="email" class="mt-3 mb-2 text-secondary font-weight-bold">Email</label>
    <input class="form-control" id="email" name="user[mail]" type="text"
           placeholder="Email" required/>
</div>
<div class="form-group">
    <label for="pass1" class="mt-3 mb-2 text-secondary font-weight-bold">Mot de passe :</label>
    <input class="form-control" id="pass1" name="user[password]" type="password"
           minlength="3" placeholder="Mot de passe" required/>
</div>
<div class="form-group">
    <label for="pass2" class="mt-3 mb-2 text-secondary font-weight-bold">Répéter le mot de passe
        :</label>
