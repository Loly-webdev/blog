{% extends "template/base.html.twig" %}
{% block title %}
    {{ post['title'] }}
{% endblock %}
{% block content %}
    <section class="article">
        <h2>{{ article['title'] }}</h2>
        <strong>{{ article['creation_date'] }}</strong>
        <p>
            {{ article['content'] }}
        </p>
        <div>
            <a href="update?articleId={{article['id']}}">Éditer</a>
            <a href="destroy?articleId={{article['id']}}">Supprimer</a>
        </div>
    </section>
    <section class="comment">
        <h3>Commentaires :</h3>
        {% for comment in comments %}
            <strong>{{ comment['author'] }}</strong>
            <br>
            <em>{{ comment['comment_date'] }}</em>
            <p>{{ comment['comment'] }}</p>
            <div>
                <a href="update?commentId={{comment['id']}}">Éditer</a>
                <a href="destroy?commentId={{comment['id']}}">Supprimer</a>
            </div>
        {% endfor %}
    </section>
    <section class="link">
        <a href="/article">Retour à la liste des billets</a>
    </section>
    <section class="link">
        <a href="commentForm?articleId={{ article['id'] }}">Ajouter un nouveau commentaire</a>
    </section>
{% endblock %}
