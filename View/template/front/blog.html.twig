{% extends "template/base.html.twig" %}
{% block title %}Blog{% endblock %}
{% block content %}
    <h2>Derniers billets du blog :</h2>
    {% for post in posts %}
        <section class="article">
            <h3>{{ post['title'] }}</h3>
            <strong>{{ post['creation_date'] }}</strong>
            <p>
                {{ post['content'] }}
            </p>
        </section>
        <section class="link">
            <a href="/article?articleId={{ post['id'] }}">Voir les commentaires associ√©s</a>
        </section>
    {% endfor %}
    <section class="form">
        <h4>Ecrire un nouvel article :</h4>
        <form action="{{ post['id'] }}" method="post">
            <div>
                <label for="author">Auteur</label><br/>
                <input type="text" id="author" name="author"/>
            </div>
            <div>
                <label for="comment">Article</label><br/>
                <textarea id="comment" name="comment"></textarea>
            </div>
            <div>
                <input type="submit"/>
            </div>
        </form>
    </section>
{% endblock %}
